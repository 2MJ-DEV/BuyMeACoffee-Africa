generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String?
  email                String?   @unique
  password             String?
  bio                  String?
  publicProfile        Boolean   @default(true)
  githubId             String?   @unique
  githubUsername       String?
  githubAvatarUrl      String?
  mobileMoneyNumber    String?
  mobileMoneyProvider  String?
  role                 String    @default("user")
  receivedDonations    Donation[] @relation("ReceivedDonations")
  sentDonations        Donation[] @relation("SentDonations")
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Donation {
  id          Int      @id @default(autoincrement())
  amount      Float
  message     String?
  creator     User     @relation("ReceivedDonations", fields: [creatorId], references: [id])
  creatorId   Int
  supporter   User?    @relation("SentDonations", fields: [supporterId], references: [id])
  supporterId Int?
  createdAt   DateTime @default(now())
}
